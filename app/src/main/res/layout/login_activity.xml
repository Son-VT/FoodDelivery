<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">
    <RelativeLayout
        android:background="@drawable/border_backround_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="8dp"
        android:orientation="vertical"
        android:layout_weight= "9">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:id="@+id/dn"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:textColor="#7bed8d"
            android:textSize="24dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputEmail"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/dn"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEmail"
                android:hint="Nhập Email"
                android:paddingLeft="10dp"
                android:lines="1"
                android:text="duonghx....@fpt.edu.vn"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_mail"
                android:drawableStart="@drawable/ic_mail"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputPass"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            app:counterMaxLength="6"
            app:counterEnabled="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/inputEmail"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPassword"
                android:hint="Nhập Password"
                android:lines="1"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:text="son123"
                android:drawableLeft="@drawable/ic_password"
                android:drawableStart="@drawable/ic_password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/txtForgotPass"
            android:layout_below="@+id/inputPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            />
        <Button
            android:id="@+id/btnSignIn"
            android:layout_below="@id/txtForgotPass"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_btn"
            android:layout_width="250dp"
            android:text="-> Đăng nhập"
            android:layout_marginTop="50dp"
            android:layout_height="50dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight= "1">
        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="TẠO TÀI KHOẢN"/>
    </RelativeLayout>
</LinearLayout>